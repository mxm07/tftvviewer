<?xml version="1.0" encoding="utf-8"?>
<com.laz.tftv.ui.ThreadRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thread_row"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/threadrow_roundrect"
    android:elevation="2dp">

    <ImageButton
        android:id="@+id/threadrow_up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/threadrow_uparrow" />

    <TextView
        android:id="@+id/threadrow_frags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/frameLayout"
        android:gravity="center_vertical|center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/threadrow_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/threadrow_downarrow" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/threadrow_down"
        android:layout_alignEnd="@+id/thread_row"
        android:id="@+id/frameLayout">

        <Button
            android:id="@+id/threadrow_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:elevation="4dp"
            android:gravity="start|center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/threadRowLink"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/threadrow_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|bottom"
            android:text="asd"
            android:textColor="@color/threadRowDesc"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/threadrow_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left|top"
            android:text="adadad"
            android:textColor="@color/threadRowLink"
            android:textSize="15sp"
            android:textStyle="bold" />

    </FrameLayout>

</com.laz.tftv.ui.ThreadRow>